#
# bspwm hotkeys
#

# Exit bspwm
alt + shift + q 
    bspc quit && pkill bar

# reload panel
alt + q 
    killall bar && panel &

# Close window
alt + shift + x
    bspc window -c

# swap active monitors
alt + {h,l}
    bspc monitor -f {prev,next}

# switch to next/prev monitor -OR- move selected window to next/prev monitor 
alt + {_,shift + }{h,l}
    bspc {monitor -f,window -m} {prev, next} 

# cycle layouts
alt +space 
    bspc desktop -l next

# Move to next/previous window
alt + {j,k}
    bspc window -f {next,prev}

# Cycle window to next/previous space
alt + shift {j,k}
    bspc desktop -C {backward,forward}

# balance tree
alt + b
    bspc desktop -B

# change between floating/windowed
alt + {_,shift +} t
    bspc window -t {floating,fullscreen}

# move current window to largest tile
alt + Return 
    bspc window -s biggest

# move to next/previous workspace
alt + {n,p}
    bspc desktop -f {next,prev}

# window ratio split
alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

# move selected window to selected workspace
alt + {_,shift + }{1-5}
    bspc {desktop -f,window -d} {I,II,III,IV,V}

~button1
    bspc pointer -g focus

# Use alt + button 1 to move windows =)
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

# For above
alt + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#

super + t
    urxvtc

super + r
    dmenu_run -nb '#0D131A' -nf '#8A9499' 

super + l 
    slock 

super + b
    google-chrome

super + space
    finder

super + e
    thunar

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd
