#
# bspwm hotkeys
#

# Exit bspwm
super + alt + Escape
    bspc quit

# Close window
alt + shift + x
    bspc window -c

# cycle layouts
alt +space 
    bspc desktop -l next

# Move to next/previous window
alt + {j,k}
    bspc window -f {next,prev}

# Cycle window to next/previous space
alt + shift {j,k}
    bspc desktop -C {backward,forward}

# balance tree
alt + b
    bspc desktop -B

# change between floating/windowed
alt + {_,shift +} t
    bspc window -t {floating,fullscreen}

# move current window to largest tile
alt + Return 
    bspc window -s biggest

# move to next/previous workspace
alt + {n,p}
    bspc desktop -f {next,prev}

# no idea what this does yet =)
alt + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

# window ratio split
alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

# move selected window to selected workspace
alt + {_,shift + }{1-5}
    bspc {desktop -f,window -d} {i,ii,iii,iv,v}

# switch to the numbered workspace
alt + {1-5}
    bspc desktop -f {i,ii,iii,iv,v}

~button1
    bspc pointer -g focus

# Use alt + button 1 to move windows =)
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

# For above
alt + !button{1-3}
    bspc pointer -t %i %i

#
# wm independent hotkeys
#

super + t
    urxvtc

super + r
    dmenu_run

super + l 
    slock

super + b
    google-chrome

# make sxhkd reload its configuration files:
alt + Escape
    pkill -USR1 -x sxhkd
